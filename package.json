{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@prisma",
      "**/@prisma/**"
    ]
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "lerna run build --no-private --stream",
    "dev": "lerna run dev --no-private --stream --parallel",
    "publish:canary": "lerna publish --conventional-prerelease --preid canary --pre-dist-tag canary --yes",
    "publish:latest": "lerna publish --conventional-graduate --yes",
    "publish:local": "lerna publish --no-git-tag-version --no-push --registry=\"http://localhost:4873/\"",
    "publish:local:dev": "yarn publish:local --dist-tag=dev --allow-branch=*",
    "unpublish:local": "lerna exec -- npm unpublish --registry=\"http://localhost:4873/\" \"\\${LERNA_PACKAGE_NAME}@\\$(npm view \\$LERNA_PACKAGE_NAME version)\"",
    "unpublish:local:all": "lerna exec -- npm unpublish -f --registry=\"http://localhost:4873/\" \"\\${LERNA_PACKAGE_NAME}\"",
    "unpublish:local:dev": "lerna exec -- npm unpublish --tag=dev --registry=\"http://localhost:4873\" --force",
    "local:npm": "verdaccio --config ./verdaccio.yml",
    "test": "lerna run test --stream"
  },
  "dependencies": {
    "create-bison-app": "*",
    "bisonapp": "*"
  },
  "devDependencies": {
    "conventional-changelog-conventionalcommits": "^4.4.0",
    "lerna": "^3.22.1"
  },
  "bison": {
    "version": "23",
    "branches": {
      "staging": "staging",
      "production": "prod"
    }
  }
}
